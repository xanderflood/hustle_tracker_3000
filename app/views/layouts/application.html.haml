!!!

%html
  %head
    = stylesheet_link_tag bootstrap_css_url
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    %title HustleTracker 3000

  %body
    .container
      .row
        .col-md-3.col-md-0
        .col-md-6.col-md-12
          - if flash[:alert].present?
            .panel-group
              .panel.panel-default
                .panel-heading
                  %text{ color: :red }
                    = flash[:alert]
          - if flash[:notice].present?
            .panel-group
              .panel.panel-default
                .panel-heading
                  = flash[:notice]
          = yield
      %hr
      %footer
        %small.text-center{ color: :gray }
          hustle tracker 3000
          = "\u00A9"
          2016 Xander Flood

        .col-md-3.col-md-0

    = javascript_include_tag bootstrap_js_url