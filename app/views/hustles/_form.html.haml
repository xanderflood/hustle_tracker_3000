= form_for @hustle do |f|
  - if @hustle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hustle.errors.count, "error")} prohibited this hustle from being saved:"
      %ul
        - @hustle.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
