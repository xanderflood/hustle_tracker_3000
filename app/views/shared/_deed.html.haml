.row
  .col-xs-12
    = live_label deed, :desc, :put, deed_path(deed), options: { multiline: true, rows: 3 }, input_tag: :textarea
%hr{ color: '#000000' }
.row
  .col-xs-3
  - if deed.total_elapsed < 30
    .col-xs-9
  - else
    .col-xs-6.text-right time spent:
    .col-cs-3
      = distance_of_time_in_words deed.total_elapsed.seconds
.row
  .col-xs-12.text-center
    %button.btn.btn-default.dropdown-toggle{ type: 'button', 'data-toggle' => 'dropdown' }
      Add to roll
      %span.caret

    %ul.dropdown-menu
      %li
        %a{ href: '#' }
          Add to new roll...
      - current_user.rolls.each do |r|
        %li
          = link_to r.name, deed_roll_add_path(deed, r), method: :post
