-# requires 'model' 'attr' 'url'
:ruby
  data = { id: model.id }

.live-label-group{ 'data-target': url, 'data-id': model.id }
  %table
    %tr
      %td
        %label.live-label
          = model.send attrib
        .wrap
          %input.autoresize.live-label{ type: 'text', value: model.send(attrib), spellcheck: false }
      %td           
        %a.live-label.btn.btn-default{ remote: true, data: { behavior: 'ajax-spin', target: '.spinner' } }
          .fa.fa-pencil